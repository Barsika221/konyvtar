@page
@model konyvtar.Pages.BooksModel
@{
    ViewData["Title"] = "Könyvek";
}

<h1>Könyvtár könyvei</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Cím</th>
            <th>Szerző</th>
            <th>Kiadás éve</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.PublicationYear</td>
            </tr>
        }
    </tbody>
</table>

<h2>Új könyv hozzáadása</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="NewBook.Title">Cím</label>
        <input asp-for="NewBook.Title" class="form-control" />
        <span asp-validation-for="NewBook.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewBook.Author">Szerző</label>
        <input asp-for="NewBook.Author" class="form-control" />
        <span asp-validation-for="NewBook.Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewBook.PublicationYear">Kiadás éve</label>
        <input asp-for="NewBook.PublicationYear" class="form-control" />
        <span asp-validation-for="NewBook.PublicationYear" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Hozzáadás</button>
</form>
